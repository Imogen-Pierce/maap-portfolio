---
import siteConfig from '../../site.config.mjs';

const title = siteConfig.title;
const base = '/';

const menuItems = [
	{ name: 'Home', link: `${base}` },
	{ name: 'Gallery', link: 'https://www.shutterstock.com/g/YourClientUsername', external: true },
	{ name: 'About', link: `${base}about` },
];
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap"
	rel="stylesheet"
/>

<nav
	x-data="{ scrolled: false }"
	@scroll.window="scrolled = window.scrollY > 50"
	class="fixed top-0 left-0 w-full z-50 transition-all duration-300"
	:class="scrolled ? 'py-3 bg-white shadow-sm' : 'py-4 bg-transparent'"
>
	<div class="container mx-auto flex flex-col items-start px-4 md:flex-row md:justify-between md:items-center">
		<!-- Logo -->
		<a class="text-2xl font-bold font-sans mb-2 md:mb-0">
			{title}
		</a>

		<!-- Full Menu (stacked on mobile, inline on desktop) -->
		<div class="flex flex-col items-end gap-2 md:flex-row md:gap-8 md:items-center">
			{menuItems.map((item) => (
				<a
					href={item.link}
					target={item.external ? '_blank' : undefined}
					rel={item.external ? 'noopener noreferrer' : undefined}
					class="nav-link text-sm md:text-base relative after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:h-[2px] after:bg-black after:w-0 hover:after:w-full transition-all"
				>
					{item.name}
				</a>
			))}
		</div>
	</div>
</nav>

---
import siteConfig from '../../site.config.mjs';

const owner = siteConfig.owner;
---

<!-- ✅ Background Image -->
<div
	class="absolute top-[80px] bottom-[120px] left-0 right-0 z-0"
	style={{
		backgroundImage: 'url(/gallery/shoreline/blockislandnorthlight.jpg)',
		backgroundSize: 'cover',
		backgroundPosition: 'center',
		backgroundRepeat: 'no-repeat',
		opacity: 0.8,
	}}
></div>

<!-- ✅ Foreground Content -->
<div class="absolute left-0 right-0 z-0">
	<div class="text-center mt-0 md:mt-6 mb-12 relative z-10 pt-12 md:pt-16">
		<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
			{owner}
		</h1>

		<a
			href="https://www.shutterstock.com/g/your-client-name"
			target="_blank"
			rel="noopener noreferrer"
			class="mt-6 inline-block px-6 py-3 border-2 border-black rounded-md
                   hover:bg-black hover:text-white transition-all duration-300
                   text-sm md:text-base font-medium
                   transform hover:scale-105 active:scale-95"
		>
			View Gallery
		</a>
	</div>
</div>

